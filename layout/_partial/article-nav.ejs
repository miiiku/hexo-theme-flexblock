<% if (post.prev || post.next){ %>
<nav class="article-nav">
  <% if (post.prev){ %>
    <a href="<%- url_for(post.prev.path) %>" id="article-nav-newer" class="article-nav-link">
      <div class="article-nav-caption"><%= __('newer') %></div>
      <div class="article-nav-title"><%= post.prev.title %></div>
    </a>
  <% } %>
  <% if (post.next){ %>
    <a href="<%- url_for(post.next.path) %>" id="article-nav-older" class="article-nav-link">
      <div class="article-nav-caption"><%= __('older') %></div>
      <div class="article-nav-title"><%= post.next.title %></div>
    </a>
  <% } %>
</nav>
<% } %>